generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ThemePreference {
  light
  dark
  system
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  name          String?
  password      String?
  image         String?
  theme         ThemePreference @default(system)
  oauthProvider String?
  oauthId       String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  podcasts Podcast[]
  accounts Account[]
  sessions Session[]

  @@index([oauthProvider, oauthId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Podcast {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  author      String?
  artwork     String?
  language    String   @default("en")
  category    String?
  explicit    Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  episodes Episode[]
  sources  Source[]

  @@index([userId])
}

model Episode {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  audioUrl    String?
  imageUrl    String?
  duration    Int?
  fileSize    Int?
  youtubeId   String?
  sourceUrl   String?
  podcastId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  podcast Podcast @relation(fields: [podcastId], references: [id], onDelete: Cascade)

  @@index([podcastId])
  @@index([youtubeId])
}

enum SourceType {
  video
  playlist
  url
  file
}

model Source {
  id          String     @id @default(cuid())
  type        SourceType
  youtubeId   String?
  sourceUrl   String?
  title       String?
  lastChecked DateTime?
  podcastId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  podcast Podcast @relation(fields: [podcastId], references: [id], onDelete: Cascade)

  @@index([podcastId])
  @@index([youtubeId])
}

enum JobStatus {
  pending
  processing
  completed
  failed
  cancelled
}

enum JobType {
  download_video
  scan_playlist
  poll_sources
  download_url
  process_upload
}

model Job {
  id        String    @id @default(cuid())
  type      JobType
  status    JobStatus @default(pending)
  progress  Int       @default(0)
  message   String?
  metadata  Json?
  error     String?   @db.Text
  startedAt DateTime?
  endedAt   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status])
  @@index([type])
}
